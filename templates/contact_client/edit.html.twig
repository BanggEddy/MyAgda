{% extends 'client.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier le contact</h1>

        {{ form_start(form) }}

        {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}
        {{ form_row(form.usercontact, {'attr': {'class': 'form-control'}}) }}

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>

        {{ form_end(form) }}

        <a href="{{ path('app_contact') }}" class="btn btn-secondary mt-3">Retour Ã  la liste des contacts</a>
    </div>
{% endblock %}
